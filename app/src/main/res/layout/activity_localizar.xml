<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".informacion_general">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_A_Localizar_menu"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botones_menu"
            android:text="MENU"
            android:textColor="#fff"
            android:gravity="start|center"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            />
        // propiedades del boton menu

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Localizar a juan"
            android:textColor="#fff"
            android:layout_marginTop="-60dp"
            android:textSize="30dp"
            android:textStyle="italic"
            android:gravity="end"
            android:layout_marginRight="5dp"
            />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/usuario"
            android:drawableRight="@drawable/ic_place_black_48dp"
            android:drawableTint="#3b3b3b" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!Localizar a juan!"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:gravity="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programa una alarma para localizar a\n juan en caso
de que lleve mas tiempo\n de lo normal, fuera de casa."
            android:textSize="17dp"
            android:textColor="#fff"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            />


        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_inputs"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="5 minutos"
            android:textColorHint="#fff"
            />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_inputs"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="15 minutos"
            android:textColorHint="#fff"
            />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_inputs"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="25 minutos"
            android:textColorHint="#fff"
            />
        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_inputs"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="35 minutos"
            android:padding="10dp"
            android:textColorHint="#fff"
            />

        <TextView
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="Â¿No lo encuentras?"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_gravity="center"

            />


        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_inputs"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:textAlignment="center"
            android:text="Localizar"
            android:textSize="15dp"
            android:textColor="#fff"
            />


        <Button
            android:id="@+id/Agregar_cita_calendar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fondobtn"
            android:drawablePadding="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_warning_black_36dp"
            android:text="Llamar a emergencias"
            android:textColor="#070707"
            />

        <TextView
        android:layout_width="match_parent"
        android:text="FELY APP, Derechos Reservados 2020"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>