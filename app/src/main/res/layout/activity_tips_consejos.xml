<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".TipsConsejos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_A_Tips_menu"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botones_menu"
            android:text="Menú"
            android:textColor="#fff"
            android:gravity="start|center"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips y consejos"
            android:textColor="#fff"
            android:layout_marginTop="-30dp"
            android:textSize="24dp"
            android:textStyle="italic"
            android:gravity="end"
            android:layout_marginRight="5dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Buscar tema..."
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/fondobtn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips y consejos"
            android:textSize="34dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Te recomendamos checar nuestras sugerencias para tener una mejor experiencia cuidando a Juan."
            android:textColor="@color/colorWhite"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:text="Cómo cambiar de ropa"
            android:textSize="24dp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textAlignment="gravity"
            android:drawableLeft="@drawable/ic_chevron_right_black_36dp"
            android:background="@drawable/fondo_inputs"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:text="Cómo ejercitarse"
            android:textSize="24dp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textAlignment="gravity"
            android:drawableLeft="@drawable/ic_chevron_right_black_36dp"
            android:background="@drawable/fondo_inputs"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:text="Cómo tomar medicina"
            android:textSize="24dp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textAlignment="gravity"
            android:drawableLeft="@drawable/ic_chevron_right_black_36dp"
            android:background="@drawable/fondo_inputs"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Solicitar consejo"
            android:textAlignment="gravity"
            android:textSize="22dp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:background="@drawable/fondobtn"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:text="FELY APP, Derechos Reservados 2020"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>