<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InformacionGeneral">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_AMenu"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botones_menu"
                android:text="Menú"
                android:textColor="#fff"
                android:gravity="start|center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                />
            // propiedades del titulo informacion general
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion General"
                android:textColor="#fff"
                android:layout_marginTop="-50dp"
                android:textSize="22dp"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                android:gravity="right|center_horizontal" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:background="@drawable/usuario"
                android:drawableRight="@drawable/usuario_48x48"
                android:drawableTint="#3b3b3b" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:layout_marginTop="-67dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="left"
                android:background="@drawable/llamar"
                android:drawableRight="@drawable/ic_phone_black_48dp"
                android:drawableTint="#FFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-70dp"
                android:layout_marginRight="40dp"
                android:paddingRight="25dp"
                android:layout_gravity="right"
                android:background="@drawable/llamar"
                android:drawableRight="@drawable/ubicacion_36x36"
                android:drawableTint="#FFF" />

            <Button
                android:id="@+id/bntIngresarIG"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:background="@drawable/botones_menu"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:text="Ingresar"

                android:textColor="#fff" />

            <Button
                android:id="@+id/btnEditarIG"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botones_menu"
                android:text="Editar"
                android:padding="5dp"
                android:textColor="#fff"
                android:layout_marginLeft="255dp"
                android:layout_marginTop="-50dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Diego Lopez"
                android:textSize="20dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="140dp"
                android:textColor="#fff"
                android:gravity="center" />


            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:hint="Nombre completo: Juan Diego Lopez Esparza"
                android:textColorHint="#fff"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/fondo_inputs"
                android:hint="Edad: 60 años"
                android:textColorHint="#fff"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />


            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/fondo_inputs"
                android:hint="Enermedad: Alzheimer"
                android:textColorHint="#fff"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="Grado/Porcentaje: Avanzado - 80%"
                android:textColorHint="#fff"
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="Tipo de sangre: AB+"
                android:textColorHint="#fff"
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="Peso: 85kg"
                android:textColorHint="#fff"
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="Alergias: N/A"
                android:textColorHint="#fff"
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="Servicio Medico: seguro social"
                android:textColorHint="#fff"
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="No. de seguro social: 812381238"
                android:textColorHint="#fff"
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notas:"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorWhite"
                android:gravity="start"/>

            <EditText
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:textColorHint="#fff"
                android:hint="Necesita de geolocalizacion gradual, cambio de ropa diario, ayuda con medicinas."
                android:background="@drawable/fondo_inputs"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:textStyle="italic"
                android:gravity="center_horizontal"
                android:text="FELY APP, Derechos Reservados 2020"
                android:textColor="#fff" />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>