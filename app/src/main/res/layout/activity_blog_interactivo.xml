<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".BlogInteractivo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_A_Blog_menu"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botones_menu"
            android:text="Menú"
            android:textColor="#fff"
            android:gravity="start|center"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blog Interactivo"
            android:textColor="#fff"
            android:layout_marginTop="-30dp"
            android:textSize="24dp"
            android:textStyle="italic"
            android:gravity="end"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blog interactivo"
            android:textSize="34dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Comunicate y comparte tus experiencias con personas que pueden brindarte su apoyo, consejos y más."
            android:textColor="@color/colorWhite"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Personas"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:textStyle="italic"
                android:layout_marginLeft="50dp"
                android:background="@drawable/fondo_inputs"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="Temas"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:background="@drawable/fondobtn"/>

        </LinearLayout>

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/fondobtn"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="350dp"
            android:src="@drawable/ic_add_black_24dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="FELY APP, Derechos Reservados 2020"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:background="#b498b4"
        android:layout_marginTop="290dp"
        android:layout_width="match_parent"
        android:layout_height="320dp">
    </ListView>

</RelativeLayout>

