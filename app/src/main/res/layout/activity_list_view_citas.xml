<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".ListViewCitas">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botones_menu"
                android:text="MENU"
                android:textColor="#fff"
                android:gravity="start|center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de Citas"
                android:textStyle="italic"
                android:textSize="34dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/blog_36x36"
                android:layout_gravity="center"
                android:textColor="#fff"
                 />

        </LinearLayout>

            <ListView
                android:id="@+id/listview_citas"
                android:background="#b498b4"
                android:layout_gravity="center"
                android:layout_marginTop="135dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_nueva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="499dp"
        android:src="@drawable/ic_add_black_24dp"
        app:backgroundTint="#E91E63"
        />


</RelativeLayout>